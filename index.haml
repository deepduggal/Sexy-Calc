%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Sexy Calc
    %meta{:content => "width=device-width, initial-scale=1, user-scalable=no, maximum-scale=1", :name => "viewport"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Lato|Lobster|Roboto", :rel => "stylesheet"}
    %link{:href => "http://sexycalc.com/css/sexycalc.css", :rel => "stylesheet"}
  %body
    %section.loading
      %h1.logo Sexy Calc
      .beta Beta
      .share.addthis_inline_share_toolbox
      .credits
        By
        %a.link{:target=>"_blank", :href=>"http://deepduggal.me"} Deep Duggal
    %section.calculator
      .solutionContainer
        .display
          %input.equation{:name => "equation", :type => "text", :value => "", :readonly => "readonly"}/
          %input.solution{:name => "solution", :type => "text", :value => "0", :readonly => "readonly"}/
        %input.backspaceButton.bttn{:name => "backspace", :type => "button", :value => "X"}/
      %form.buttonsContainer
        .clearCol
          %input.bttn{:name => "clear", :type => "button", :value => "Clear"}/
        .mainCol
          .mainRow.specialOperators
            %input.bttn{:name => "percent", :type => "button", :value => "%"}/
            %input.bttn{:name => "squareRoot", :type => "button", :value => "√"}/
            %input.bttn{:name => "squared", :type => "button", :value => "x²"}
          .mainRow
            %input.bttn{:name => "seven", :type => "button", :value => "7"}/
            %input.bttn{:name => "eight", :type => "button", :value => "8"}/
            %input.bttn{:name => "nine", :type => "button", :value => "9"}/
          .mainRow
            %input.bttn{:name => "four", :type => "button", :value => "4"}/
            %input.bttn{:name => "five", :type => "button", :value => "5"}/
            %input.bttn{:name => "six", :type => "button", :value => "6"}/
          .mainRow
            %input.bttn{:name => "one", :type => "button", :value => "1"}/
            %input.bttn{:name => "two", :type => "button", :value => "2"}/
            %input.bttn{:name => "three", :type => "button", :value => "3"}/
          .mainRow
            %input.bttn{:name => "zero", :type => "button", :value => "0"}/
            %input.bttn{:name => "decimalPoint", :type => "button", :value => "."}/
        .operatorsCol
          %input.bttn{:name => "divide", :type => "button", :value => "/"}/
          %input.bttn{:name => "multiply", :type => "button", :value => "*"}/
          %input.bttn{:name => "subtract", :type => "button", :value => "-"}/
          %input.bttn{:name => "add", :type => "button", :value => "+"}/
          %input.bttn{:name => "equals", :type => "button", :value => "="}/
    %script{:src => "js/sexycalc-dist.js", :type => "text/javascript"}
    %script{:src => "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-587ef328a237144a", :type => "text/javascript"}

